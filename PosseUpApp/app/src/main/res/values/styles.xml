<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="colorAccent">@color/ColorPrimary</item>


    </style>

    <style name="CreateEventStyle" parent="BaseAppTheme">
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorButtonNormal">@color/ColorPrimary</item>
        <item name="toolbarStyle">@style/custom_toolbar</item>
        <item name="colorAccent">@color/ColorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/ColorPrimary</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="DarkCheckbox" parent="AppTheme">
        <item name="colorControlNormal">#000</item>
    </style>

    <style name="fullscreenStartPage" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/ColorPrimary</item>
    </style>

    <style name="TranslucentStatusBar" parent="AppTheme"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
