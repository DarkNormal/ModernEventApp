<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="RevisedAppTheme" parent="AppTheme">
        <!--<item name="android:background">@android:color/white</item>-->
        <item name="android:textColor">#000</item>
    </style>

    <style name="RevisedAppTheme.DarkText" parent="RevisedAppTheme">
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/ColorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <!-- Used for the title and text -->

    </style>

    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#FFF</item>
        <item name="colorAccent">@color/ColorPrimary</item>
    </style>

    <style name="TranslucentStatusBar" parent="AppTheme">
        <item name="android:textColorPrimary">#ff0101</item>
    </style>

    <style name="fullscreenStartPage" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
