<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_profile_picture"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_huge"
            android:src="@drawable/profiler"/>
        <TextView
            android:id="@+id/user_name"
            android:text="USERNAME"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_below="@+id/user_profile_picture"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_location"
            android:text="LOCATION"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"/>

        <LinearLayout
            android:layout_below="@+id/user_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/user_followers"
                android:onClick="viewFollowers"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_follower_count"
                    android:layout_below="@+id/user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="11.5K"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_below="@+id/user_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Followers"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_events"
                android:onClick="viewEvents"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_number_of_events"
                    android:layout_below="@+id/user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_below="@+id/user_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Events"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_following"
                android:onClick="viewFollowing"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_following_count"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="11.5K"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Following"
                    android:padding="4dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>