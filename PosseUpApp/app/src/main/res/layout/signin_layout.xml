<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_in_background" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/signin_header"
        android:layout_marginTop="58dp"
        android:textColor="#FFF8F8"
        android:textSize="34sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_basic_info"
        android:id="@+id/signin_desc"
        android:textColor="#FFF8F8"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textSize="16sp"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:paddingTop="64dp"
        android:layout_below="@+id/signin_header"
        android:layout_alignParentStart="true" />





    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_desc"
        android:layout_centerHorizontal="true"
        android:id="@+id/fragmentHolder">


    </LinearLayout>

</RelativeLayout>