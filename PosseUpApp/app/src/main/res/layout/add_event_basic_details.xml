<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/create_event_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_event_title_input"
            android:textSize="24sp"
            android:inputType="text"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAlwaysShown="true"
            app:met_floatingLabelText="Event Title"
            android:hint="Event Title"
            style="@style/Widget.AppCompat.EditText"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="From"
                android:layout_weight="2"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                android:layout_marginRight="16dp"

                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="To"
                android:focusable="false"
                android:layout_weight="2"
                android:drawableRight="@drawable/ic_caret_down"
                android:layout_marginRight="16dp"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                />

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Day"
            android:id="@+id/all_day_event" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event visibility"
                android:id="@+id/create_event_visibility"
                android:textSize="20sp"
                android:layout_weight="3"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_event_type"
                android:layout_weight="1"/>
        </LinearLayout>



        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online event"
            app:switchPadding="14sp"/>
    </LinearLayout>

</LinearLayout>