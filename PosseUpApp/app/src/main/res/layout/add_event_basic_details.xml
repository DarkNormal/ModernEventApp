<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_event_title_input"
            android:textSize="24sp"
            android:inputType="text"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAlwaysShown="true"
            app:met_floatingLabelText="Event Title"
            android:hint="Event Title"
            style="@style/Widget.AppCompat.EditText"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="From"
                android:layout_weight="2"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                android:layout_marginRight="16dp"

                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="To"
                android:focusable="false"
                android:layout_weight="2"
                android:drawableRight="@drawable/ic_caret_down"
                android:layout_marginRight="16dp"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/create_event_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:drawableRight="@drawable/ic_caret_down"
                />

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Day"
            android:id="@+id/all_day_event"
            android:layout_gravity="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event visibility"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_event_type"
                android:layout_weight="2"
                android:layout_gravity="end"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/placePickerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ColorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venue"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:paddingLeft="8dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Current Location"
                        android:layout_weight="8"/>
                    <TextView
                        android:id="@+id/event_current_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not set" />

                </LinearLayout>
                <android.support.v7.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Event"
                    android:layout_gravity="end"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/add_event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:textSize="24sp"
            android:inputType="textMultiLine"/>
</LinearLayout>