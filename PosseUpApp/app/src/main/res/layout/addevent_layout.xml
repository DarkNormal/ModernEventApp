<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_event_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_event_title_input"

                android:inputType="text"
                app:met_floatingLabel="highlight"
                android:hint="Event Name"
                style="@style/Widget.AppCompat.EditText" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_event_desc_field"
                android:minLines="1"
                android:maxLines="4"
                android:inputType="textMultiLine"
                app:met_floatingLabel="highlight"
                android:hint="Brief Description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event visibility"
                android:id="@+id/create_event_visibility" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_event_type" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online event"
                app:switchPadding="14sp"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/event_location_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Event Location Description"
                app:met_floatingLabel="highlight"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map_event">

            </fragment>
        </LinearLayout>

    </ScrollView>



</LinearLayout>